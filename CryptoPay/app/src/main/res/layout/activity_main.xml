<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bitcryptopay.cryptopay.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="412dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTestTwoClick"
            android:text="Create Address"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/addresstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="64dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTestOneClick"
            android:text="Check My Balance"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/balancetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="64dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTestThreeClick"
            android:text="Get Money"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/getconfirmtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="64dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTestFourClick"
            android:text="Check Their Balance"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/theirbalancetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="64dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTestFiveClick"
            android:text="Send Money"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="135dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/sendconfirmtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="TextView"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="64dp" />



    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"

        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

</android.support.constraint.ConstraintLayout>
